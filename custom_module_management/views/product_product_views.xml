<odoo>
    <record id="product_product_form_view_inherit" model="ir.ui.view">
        <field name="name">product.product.inherit</field>
        <field name="model">product.product</field>
        <field
            name="inherit_id"
            ref="product_odoo_module.product_product_form_view_inherit"
        />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='module_info']" position="after">
                <field name="customer_infos" nolabel="1">
                    <tree editable="bottom">
                        <field name="partner_id" />
                        <field name="repo" />
                    </tree>
                </field>
            </xpath>
        </field>
    </record>
</odoo>
