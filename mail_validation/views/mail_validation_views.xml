<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="mail_validation_tree" model="ir.ui.view">
        <field name="name">mail.validation.tree</field>
        <field name="model">mail.validation</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="model" />
            </tree>
        </field>
    </record>
    <record id="mail_validation_form" model="ir.ui.view">
        <field name="name">mail.validation.form</field>
        <field name="model">mail.validation</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="model" />
                        <field name="validation_type" widget="radio" />
                        <field
                            name="domain"
                            attrs="{'invisible': [('validation_type','!=','by_domain')], 'required': [('validation_type','=','by_domain')]}"
                            widget="domain"
                            options="{'model': 'model'}"
                        />
                    </group>
                    <notebook>
                        <page
                            name="code"
                            string="Python Code"
                            attrs="{'invisible': [('validation_type','!=','by_py_code')], 'required': [('validation_type','=','by_py_code')]}"
                        >
                            <field
                                name="code"
                                widget="ace"
                                options="{'mode': 'python'}"
                                placeholder="Enter Python code here. To block the sending mail use: block = True"
                            />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="action_mail_validation" model="ir.actions.act_window">
        <field name="name">Mail Validation</field>
        <field name="res_model">mail.validation</field>
    </record>
    <menuitem
        id="menu_mail_validation"
        name="Mail Validation"
        parent="base.menu_administration"
        sequence="20"
    />
    <menuitem
        id="menu_mail_validation_model"
        action="action_mail_validation"
        parent="menu_mail_validation"
        sequence="20"
    />
</odoo>
