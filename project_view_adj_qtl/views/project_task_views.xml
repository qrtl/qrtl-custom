<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_task_kanban">
        <field name="name">project.task.kanban</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban" />
        <field name="arch" type="xml">
            <!-- can't use normal name reference in kanban view.
            below lines are to show display_name instead of name -->
            <xpath
                expr="//kanban/templates/t/div/div/div/div/strong/field"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//kanban/templates/t/div/div/div/div/strong/field"
                position="after"
            >
                <field name="display_name" />
            </xpath>
        </field>
    </record>

     <record id="view_task_tree2" model="ir.ui.view">
        <field name="name">project.task.tree</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_tree2" />
        <field name="arch" type="xml">
            <xpath expr="//tree" position="attributes">
                <attribute name="default_order">id desc</attribute>
            </xpath>
            <xpath expr="//field[@name='name']" position="before">
                <field name="id" />
            </xpath>
            <xpath expr="//field[@name='name']" position="after">
                <field name="parent_id"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="partner_id" />
                <field name="date_deadline" />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_form2">
        <field name="name">project.task.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2" />
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_assign_to_me']" position="before">
                <button
                    name="%(project.action_view_task)d"
                    string="View Tasks"
                    type="action"
                />
            </xpath>
            <field name="name" position="after">
                <span class="oe_inline"> (#<field name="id" class="oe_inline" />)</span>
            </field>
            <field name="partner_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="parent_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="date_deadline" position="before">
                <field name="partner_id" />
                <field name="date_start" />
                <field name="date_end" />
            </field>
            <field name="user_id" position="after">
                <field name="parent_id" />
            </field>
            <field name="unit_amount" position="after">
                <field name="project_id"/>
                <field name="billability"/>
                <field name="billability_code" invisible="1"/>
            </field>
             <xpath expr="//field[@name='timesheet_ids']/tree" position="attributes">
                <attribute name="decoration-success">billability_code=='billable'</attribute>
                <attribute name="decoration-warning">billability_code=='nobill'</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_task_search_form" model="ir.ui.view">
        <field name="name">project.task.search.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_search_form" />
        <field name="arch" type="xml">
            <field name="name" position="attributes">
                <attribute name="filter_domain">
                     ['|', '|', ('name','ilike', self), ('parent_id','ilike',
                    self), ('id', 'ilike', self)]
                </attribute>
            </field>
            <xpath expr="//filter[@name='unassigned']" position="after">
                <separator />
                <filter string="Draft" name="draft" domain="[('state','=','draft')]" />
                <filter string="Open" name="open" domain="[('state','=','open')]" />
                <filter
                    string="Pending"
                    name="pending"
                    domain="[('state','=','pending')]"
                />
                <filter string="Done" name="done" domain="[('state','=','done')]" />
                <filter
                    string="Cancelled"
                    name="cancelled"
                    domain="[('state','=','cancelled')]"
                />
            </xpath>
        </field>
    </record>

    <record
        id="project.act_project_project_2_project_task_all"
        model="ir.actions.act_window"
    >
        <field name="context">{
            'search_default_project_id': [active_id],
            'default_project_id': active_id,
            'search_default_draft': 1,
            'search_default_open': 1,
            'search_default_pending': 1
        }</field>
    </record>

    <record id="project.action_view_task" model="ir.actions.act_window">
        <field name="context">{
          'search_default_draft': 1,
          'search_default_open': 1,
          'search_default_pending': 1,
        }</field>
    </record>

</odoo>
