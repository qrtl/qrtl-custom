<?xml version="1.0" encoding="utf-8"?>
<odoo>

     <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.project</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="project.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='project']//div[@class='row mt16 o_settings_container'][1]" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_right_pane">
                        <label for="customer_reply_stage_id"/>
                        <div class="text-muted">
                            Stage that will be applied to the task when non-internal users reply to the task.
                        </div>
                        <div class="content-group">
                            <div class="mt16">
                                <field name="customer_reply_stage_id"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
